@model WebApplication3.Models.ProductModel

<h2>Product Details</h2>

<div>
    <h4>@Model.ProductName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Product Image</dt>
        <dd class="col-sm-10">
            <img src="@Model.ProductImageUrl" alt="Product Image" width="200" />
        </dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.ProductPrice</dd>
        <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model.ProductDetails</dd>
    </dl>
</div>
