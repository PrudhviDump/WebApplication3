@model Microsoft.AspNetCore.Mvc.ProblemDetails

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h1>Error</h1>
        <p>An error occurred while processing your request.</p>
        <p>Status Code: @(Model.Status.HasValue ? Model.Status.ToString() : "N/A")</p>
        <p>Title: @(Model.Title != null ? Model.Title : "N/A")</p>
        <p>Detail: @(Model.Detail != null ? Model.Detail : "N/A")</p>
    </div>
</body>
</html>
